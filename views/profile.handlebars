<div class="row">
  <div class="col-auto">
    <h2 class="custom-h2">Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Write a new blog post:</h3>

    <form class="form new-blogPost-form">
      <div class="form-group">
        <label for="blogPost-name">Your post's title:</label>
        <input class="form-input" type="text" id="blogPost-name" name="blogPost-name" />
      </div>
      {{!-- <div class="form-group">
        <label for="blogPost-funding">needed funding ($):</label>
        <input class="form-input" type="number" id="blogPost-funding" name="blogPost-funding" />
      </div> --}}
      <div class="form-group">
        <label for="blogPost-desc">Your post content:</label>
        <textarea class="form-input" id="blogPost-desc" name="blogPost-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Publish</button>
      </div>
    </form>
  </div>

  {{#if blogPosts.length}}
  <div class="col-md-6 blogPost-list">
    <h3>Current Blog Posts:</h3>

    {{#each blogPosts as |blogPost|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blogPost/{{blogPost.id}}">{{blogPost.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{blogPost.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
