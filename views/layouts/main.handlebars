<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Tech Blog</title>
    <link rel='stylesheet' href='/css/jass.css' />
    <link rel='stylesheet' href='/css/style.css' />
  </head>

  <body>
    <div class='flex-column justify-space-around'>
      <header class='col-sm-12 display-flex justify-space-between align-center p-2'>
        <h1 class='custom-colour custom-h1'>
          {{! <span role="img" aria-label="money">ðŸ’¸</span> }}
          <a href='/'>The Tech Blog</a>
        </h1>
        <nav>
          <!-- Conditionally render login or logout links -->
          {{#if logged_in}}
            <button class='no-button' href='/'>HOME</button>
            |
            <button class='no-button' href='/profile'>PROFILE</button>
            |
            <button class='no-button mr-3' id='logout'>LOGOUT</button>
          {{else}}
            <button class='no-button mr-3' href='/login'>LOGIN</button>
          {{/if}}
        </nav>
      </header>
      <main class='container container-fluid mt-5'>
        <!-- Render the sub layout -->
        {{{body}}}
      </main>
      <footer>

      </footer>
    </div>

    <!-- Render script for logged in users only -->
    {{#if logged_in}}
      <script src='/js/logout.js'></script>
    {{/if}}
  </body>

</html>