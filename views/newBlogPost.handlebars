<div class='row ms-5 me-5 p-1'>
  <h3 class='mt-3'>Create a new post</h3>
  <form id='new-blog-post-form'>
    <div class='form-group mt-3 m-1'>
      <label for='title-input'><h5>Enter a title:</h5></label>
      <input
        type='text'
        class='form-control'
        id='title-input'
        placeholder='Post title'
        aria-describedby='postTitle'
      />
    </div>
    <div class='form-group mt-3 m-1'>
      <label for='content-input'><h5>Enter your post's content:</h5></label>
      <textarea
        class='form-control'
        id='content-input'
        placeholder='Post content'
        aria-describedby='postContent'
        rows='10'
      ></textarea>
    </div>
    <button type='submit' class='btn btn-lg btn btn-dark mt-3 m-1'>Publish your post</button>
  </form>
</div>
<script src='/js/createNewPost.js'></script>

